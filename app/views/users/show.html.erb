
<p>
<h2>Ratings by: <%= @user.username%></h2>
<% if @ratings.size>0 %>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Score</th>
        <th>Ravintola</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @ratings.each do |rating| %>
          <tr>
            <td><%= link_to rating.score, rating_path(rating) %></td>
            <td><%= link_to rating.get_place.name, places_path+"/"+rating.get_place.place_id%></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    </p>
<%else%>
    <strong>No ratings yet!</strong>
    <br>
    <%end%>
<% if current_user==@user %>
    <%= link_to 'Edit', edit_user_path(@user), class:"btn btn-warning btn-xs" %>
<% end %>
<%= link_to 'Back to all users', users_path, class:"btn btn-default btn-xs" %>
<% if current_user %>
<%= link_to "Add #{@user.username} as friend", friendships_path(:friendship => {friend_a_id: current_user.id, friend_b_id: @user.id, status:"pending"}), method: :post %>
    <% if current_user==@user  %>
        <h3>Pending requests:</h3>
        <ul class="demo-list-icon mdl-list">
          <% @requests.each do |request| %>
              <li class="mdl-list__item">
    <span class="mdl-list__item-primary-content">
<i class="material-icons mdl-list__item-avatar ">person</i>
      <%= link_to User.getUser(request.friend_a_id).username, user_path(request.friend_a_id) %>
      </span>
                <span class="mdl-list__item-secondary-content">
                    <a class="mdl-list__item-secondary-action" href="<%= accept_request_path(:friendship => {friend_a_id: request.friend_a_id, friend_b_id: request.friend_b_id}) %>"><i class="material-icons">person add</i></a>
                </span>
              </li>
          <% end %>
        </ul>
        <%end%>
<% end %>
