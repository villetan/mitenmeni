<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>
<br>
<p>
<h2>Ratings by: <%= @user.username%></h2>
<table>
  <thead>
  <tr>
    <th>Score:</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @ratings.each do |rating| %>
      <tr>
        <td><%= link_to rating.score, rating_path %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
