
<p>
<h2>Ratings by: <%= @user.username%></h2>
<% if @ratings.size>0 %>
    <table>
      <thead>
      <tr>
        <th>Score:</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @ratings.each do |rating| %>
          <tr>
            <td><%= link_to rating.score, rating_path(rating) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    </p>
<%else%>
    <strong>No ratings yet!</strong>
    <br>
    <%end%>
<% if current_user==@user %>
    <%= link_to 'Edit', edit_user_path(@user), class:"btn btn-warning btn-xs" %>
<% end %>
<%= link_to 'Back to all users', users_path, class:"btn btn-default btn-xs" %>
