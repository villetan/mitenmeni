<h1>Editing User</h1>
<%= form_for(@user) do |f| %>
<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
  <label class="mdl-textfield__label" for="username">Username</label>
  <%= f.text_field :username, class:"mdl-textfield__input" %>
</div>
<br >
<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
  <label class="mdl-textfield__label" for="username">Password</label>
  <%= f.password_field :password, class:"mdl-textfield__input" %>
</div>
<br >
<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
  <label class="mdl-textfield__label" for="username">Password confirmation</label>
  <%= f.password_field :password_confirmation, class:"mdl-textfield__input"  %>
</div>
<div class="actions">
  <%= submit_tag "Submit", class:"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>  </div>
<% end %>


