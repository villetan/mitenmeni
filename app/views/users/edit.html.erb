<h1>Editing User</h1>
<%= form_for(@user) do |f| %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" type="text">
      <label class="mdl-textfield__label" for="username">Username</label>
      <%= f.text_field :username, class:"mdl-textfield__input", :readonly=> true %>
    </div>
    <br>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <label class="mdl-textfield__label" for="old_password">Old password</label>
      <%= f.password_field :old_password, class:"mdl-textfield__input" %>
    </div>
    <br >
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <label class="mdl-textfield__label" for="new_password">New password</label>
      <%= f.password_field :password, class:"mdl-textfield__input" %>
    </div>
    <br >
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <label class="mdl-textfield__label" for="password_confirmation">New password again</label>
      <%= f.password_field :password_confirmation, class:"mdl-textfield__input"  %>
    </div>
    <div class="actions">
      <%= submit_tag "Submit", class:"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
      <%if current_user and @user==current_user%>
      <%= link_to "Delete user #{@user.username}",user_path(current_user), class:"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent", method: :delete, data: { confirm: 'User will be permanently deleted, ratings that you might have done will stay as from anonomys user ratings. If you do not want that, please delete the ratings one by one' } %>
          </div>
        <%end%>
<% end %>


