<section>
<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Show', user, class: "btn btn-default btn-xs" %></td>
        <% if user==current_user %>
        <td><%= link_to 'Edit', edit_user_path(user),class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-xs" %></td>
            <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</section>

