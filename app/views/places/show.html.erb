
<p class="col-xs-6">
<h1><%= @place.name%></h1>
</p>

<p class="col-xs-6">
  <%= @place.formatted_address%>
  <br>
  <% if @place.formatted_phone_number%>
     Phone number:  <%= @place.formatted_phone_number%>
  <%end %>
  <br>

</p>

<% if @days %>
    <p class="col-xs-6">
    <table >
      <col width="50">
      <col width="50">
      <thead>
      <tr>
        <th>Day</th>
        <th>Opens</th>
        <th>Closes</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% i=0%>
      <% @days.each do |day| %>

          <tr>
            <th>
              <% if i==0 %>
                  S
              <%end%>
              <% if i==1 %>
                  M
              <%end%>
              <% if i==2 %>
                  T
              <%end%>
              <% if i==3 %>
                  W
              <%end%>
              <% if i==4 %>
                  T
              <%end%>
              <% if i==5 %>
                  F
              <%end%>
              <% if i==6 %>
                  S
              <%end%>
            </th>
            <td><%= day["open"]["time"] %></td>
            <td><%= day["close"]["time"]%></td>
          </tr>
          <%i=i+1%>
      <% end %>
      </tbody>
    </table>
    </p>
<% end %>


<br>
<% if @ratings and @ratings.length>0 %>
<h1>Ratings:</h1>
<p>

  <% @ratings.each do |rating| %>
    <ul class="demo-list-three mdl-list">
      <li class="mdl-list__item mdl-list__item--three-line">
        <span class="mdl-list__item-primary-content">
          <i class="material-icons mdl-list__item-avatar">person</i>
          <span>
            <%if rating.get_user%>
          <%=link_to rating.get_user.username, rating.get_user %>
      <%else%>
          ANON
                <%end%>
          </span>
          <span class="mdl-list__item-text-body">
            <% if rating.comment %>
                <%if rating.comment.length>50%>
            <%=rating.comment[0...50]+"..."%>
                    <%else%>
                <% rating.comment%>
                <%end%>
            <% else %>
            no comment
            <% end %>
           </span>
          <%= rating.score%>
          </span>
         <span class="mdl-list__item-secondary-content">

        <i><%= link_to "Score: #{rating.score}", rating%></i>
    </span>
      </li>

    </ul>

<% end %>

</p>
    <% end %>
<p>
<h2>
  Rate this place:
</h2>
<p id="notice"><%= notice %></p>

<%= form_for(@rating) do |f| %>

    <% if @rating.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

          <ul>
            <% @rating.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field col-8">
      <%= f.label :score %><br>
      <%= f.number_field :score %>
      <br>
      <%= f.label :comment %>
      <br>
      <%= f.text_area :comment, cols:"100", rows:"5"%>
      <%= f.hidden_field :place_id, :value => @place.place_id %>

    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
</p>
